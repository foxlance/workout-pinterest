#pins.container.transitions-enabled
  .row
    - @pins.each do |pin|
      %div.panel.panel-default

        %div.panel-body
          = link_to (image_tag pin.image.url(:thumb), class: "img-responsive"), pin
        %div.panel-footer
          %p.heading= pin.name
          %p.description= pin.description
          %p.user
            = image_tag "/img/blankavatar.jpg", class: "img-circle"
            = pin.user.email
