.row
  .col-sm-10.col-sm-offset-1
    %div.notifications
      - if notice
        %p.alert.alert-success.alert-dismissible
          %button{:type=>"button", :class=>"close", "data-dismiss"=>"alert", "aria-label"=>"Close"}
            %span{"aria-hidden"=>"true"}
              &times;
          = notice
      - if alert
        %p.alert.alert-danger.alert-dismissible
          %button{:type=>"button", :class=>"close", "data-dismiss"=>"alert", "aria-label"=>"Close"}
            %span{"aria-hidden"=>"true"}
              &times;
          = alert